<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sample.labelview.MainActivity">


    <cn.ymex.view.label.TextLabel
        android:padding="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:text="SpanCell图文片段（简称片段或SpanCell）。TextLabel可独立设置一个固定头片段和一个尾片段。每片段（SpanCell）都可以独门设置颜色，图片，大小，点击事件。 "/>


    <cn.ymex.view.label.TextLabel
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16dp"
        app:startDrawable="@mipmap/amalia"
        app:startText="头片段文字"
        android:text="默认文字"
        app:endText="尾片段文字"
        app:endTextSize="14sp"
        app:endDrawable="@mipmap/ic_launcher"
        app:endDrawableSize="24dip"
        app:endDrawableInLast="true"
        app:endTextColor="@color/color_2"
        android:layout_marginTop="16dip"
        android:layout_marginBottom="16dip"/>



    <ListView
        android:id="@+id/lv_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
