<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sample.labelview.MainActivity">


    <cn.ymex.view.label.TextLabel
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip"
        android:text="2000"
        app:startDrawable="@mipmap/ic_launcher"
        app:startTextColor="@color/blue_dark"
        app:startText="金额："
        app:endText="元"
        app:endTextColor="@color/blue_dark"
        app:startDrawableSize="24dip"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_settext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:text="setText()" />

    <cn.ymex.view.label.TextLabel
        android:id="@+id/tv_label_2"
        android:layout_width="wrap_content"
        android:text="@string/title"
        android:padding="8dip"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_second"
        android:text="set spancell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
